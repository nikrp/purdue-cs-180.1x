import java.util.Scanner;

public class Wheel {
  
  double radius;
  
  Wheel(double radius) {
    this.radius = radius;
  }
  
  public static void main(String[] args) {
    System.out.println("Please provide a real: ");
    Scanner s = new Scanner(System.in); 
    double input = s.nextDouble();
    
    Wheel w = new Wheel(input);
  }
}
